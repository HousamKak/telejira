# =============================================================================
# Telegram-Jira Bot Configuration
# =============================================================================
# Copy this file to .env and configure your settings

# =============================================================================
# REQUIRED SETTINGS - Must be configured for the bot to work
# =============================================================================

# Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Jira Configuration
JIRA_DOMAIN=your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path
DATABASE_PATH=bot_data.db

# Database connection settings
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# =============================================================================
# BOT BEHAVIOR SETTINGS
# =============================================================================

# Maximum length for issue summaries and descriptions
MAX_SUMMARY_LENGTH=100
MAX_DESCRIPTION_LENGTH=2000

# Pagination settings
MAX_ISSUES_PER_PAGE=10
MAX_PROJECTS_PER_PAGE=15

# Session timeout in hours
SESSION_TIMEOUT_HOURS=24

# =============================================================================
# DEFAULT VALUES
# =============================================================================

# Default priority for new issues (Critical, High, Medium, Low, Lowest)
DEFAULT_PRIORITY=Medium

# Default issue type (Task, Story, Bug, Epic, Subtask)
DEFAULT_ISSUE_TYPE=Task

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Comma-separated Telegram user IDs allowed to use the bot
# Leave empty to allow all users
ALLOWED_USERS=

# Comma-separated Telegram user IDs with admin privileges
ADMIN_USERS=

# Comma-separated Telegram user IDs with super admin privileges
SUPER_ADMIN_USERS=

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=telegram_jira_bot.log

# Log file maximum size in bytes (10MB default)
LOG_MAX_SIZE=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# JIRA API SETTINGS
# =============================================================================

# Jira API timeout settings
JIRA_TIMEOUT=30
JIRA_MAX_RETRIES=3
JIRA_RETRY_DELAY=1.0
JIRA_PAGE_SIZE=50

# =============================================================================
# TELEGRAM SETTINGS
# =============================================================================

# Telegram API timeout settings
TELEGRAM_TIMEOUT=30
TELEGRAM_POOL_TIMEOUT=1
TELEGRAM_CONNECTION_POOL_SIZE=8

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable interactive wizards
ENABLE_WIZARDS=true

# Enable command shortcuts
ENABLE_SHORTCUTS=true

# Enable automatic Jira synchronization
ENABLE_AUTO_SYNC=false

# Enable notifications
ENABLE_NOTIFICATIONS=true

# Enable issue comments functionality
ENABLE_ISSUE_COMMENTS=true

# Enable time tracking
ENABLE_TIME_TRACKING=true

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Cache duration in minutes
CACHE_PROJECTS_MINUTES=30
CACHE_USER_PREFERENCES_MINUTES=60
CACHE_JIRA_METADATA_MINUTES=120

# =============================================================================
# UI SETTINGS
# =============================================================================

# Use inline keyboards for better UX
USE_INLINE_KEYBOARDS=true

# Show issue previews in lists
SHOW_ISSUE_PREVIEWS=true

# Show user avatars (requires additional API calls)
SHOW_USER_AVATARS=false

# Use compact mode for messages
COMPACT_MODE=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (more verbose logging)
DEBUG_MODE=false

# Enable development features
DEV_MODE=false

# Mock Jira API for testing (don't use in production)
MOCK_JIRA_API=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Custom webhook URL for receiving Jira events (optional)
WEBHOOK_URL=

# Custom webhook secret for verification (optional)
WEBHOOK_SECRET=

# Maximum file upload size in MB
MAX_FILE_UPLOAD_SIZE=10

# Supported file extensions for uploads (comma-separated)
ALLOWED_FILE_EXTENSIONS=txt,pdf,doc,docx,jpg,jpeg,png,gif

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Enable performance monitoring
ENABLE_MONITORING=true

# Enable user activity tracking
ENABLE_ACTIVITY_TRACKING=true

# Monitor slow queries (threshold in seconds)
SLOW_QUERY_THRESHOLD=1.0

# Monitor slow requests (threshold in seconds)
SLOW_REQUEST_THRESHOLD=2.0